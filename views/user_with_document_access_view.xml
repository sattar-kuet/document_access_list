<odoo>
    <data>

        <!-- Tree View -->
        <record id="res_users_list_internal_readonly" model="ir.ui.view">
            <field name="name">res.users.list.internal.readonly</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="login"/>
                    <field name="create_date"/>
                </list>
            </field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Form View -->
        <record id="res_users_form_internal_readonly" model="ir.ui.view">
            <field name="name">res.users.form.internal.readonly</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="login"/>
                        </group>

                        <notebook>
                            <page string="Document Access">
                                <field name="document_access_ids" nolabel="1">
                                    <list create="0" edit="0" delete="0">
                                        <field name="document_id"/>
                                        <field name="role"/>
                                        <field name="last_access_date"/>
                                        <field name="expiration_date"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Action -->
        <record id="action_res_users_internal_readonly" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('res_users_list_internal_readonly')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_users_form_internal_readonly')})
            ]"/>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Staff Menu -->
        <menuitem id="menu_res_users_readonly_root"
                  name="Users"
                  groups="base.group_user"/>

        <menuitem id="menu_res_users_readonly"
                  name="Users"
                  parent="menu_res_users_readonly_root"
                  action="action_res_users_internal_readonly"
                  groups="base.group_user"/>
    </data>
</odoo>
